<h1>PÃ¡gina de Categoria Detalhada</h1>
<div class="min-h-screen flex justify-center">
    <div class="flex flex-wrap flex-col mt-6">
        <h2 class="text-lg text-gray-800">Filtro</h2>
    </div>
    <div class="flex flex-wrap mt-6 gap-10 flex-grow justify-center items-start">
        <% if @products.empty? %>
            <p class="text-2xl text-left text-gray-800">Sem produtos associados</p>
        <% else %>
            <% @products.each do |product| %>
                <%= link_to root_path do %>
                    <div class="max-w-xs flex flex-col p-4 justify-center items-center">
                        <%= product.images.first ? image_tag(product.images.first.variant(:medium), class:"rounded") : image_tag("https://placehold.co/200")%>
                        <p class="mt-6 font-medium text-gray-800">
                            <%= product.name %>
                        </p>
                    </div>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>