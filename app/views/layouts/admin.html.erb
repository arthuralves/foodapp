<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main class="flex">
      <nav class="flex w-56">
        <div class="w-64 p-4 h-screen bg-gray-600 sticky top-0">
            <div class="flex">
                <%= image_tag "logo.png", class: 'w-16' %>
                <h1 class="text-md py-2 text-gray-50 font-bold hidden md:block">FoodApp</h1>
            </div>
            <ul class="flex flex-col text-gray-50">
                <li>
                    <%= link_to admin_path, class:"block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                        <%= icon('fa-solid', 'gauge-high') %> 
                        <span class="hidden md:inline-block">Dashboard</span>

                    <% end %>
                </li>
                <li>
                    <%= link_to admin_products_path, class:"block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                        <%= icon('fa-solid', 'cart-shopping') %> 
                        <span class="hidden md:inline-block">Product</span>

                    <% end %>
                </li>
                <li>
                    <%= link_to admin_categories_path, class:"block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                        <%= icon('fa-solid', 'list') %> 
                        <span class="hidden md:inline-block">Categories</span>

                    <% end %>
                </li>
                <li>
                    <%= link_to admin_orders_path, class:"block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                        <%= icon('fa-solid', 'truck-fast') %> 
                        <span class="hidden md:inline-block">Orders</span>

                    <% end %>
                </li>
            </ul>
        </div>
      </nav>
      <div class="w-full p-8">
        <%= yield %>
      </div>
      
    </main>
  </body>
</html>