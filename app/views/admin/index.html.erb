<h1>Admin Dashboard</h1>

<div class="flex justify-between flex-wrap mt-8 w-full items-center max-w-4xl">
    <h2 class="text-2xl text-gray-800 font-medium mb-4">Daily stats</h2>
    <div class="flex gap-10 flex-col md:flex-row justify-between w-full">
        <div class="max-w-sm rounded overflow-hidden shadow-lg bg-gradient-to-r from-gray-400 to-gray-300">
            <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2 text-gray-800">Revenue</div>
                <p class="text-gray-800 text-base">
                    R$ <%= @quick_stats[:revenue] ? number_to_currency(@quick_stats[:revenue], unit: '', separator: ',', delimiter: '.') : "0" %>
                </p>
            </div>
        </div>
        <div class="max-w-sm rounded overflow-hidden shadow-lg bg-gradient-to-r from-gray-400 to-gray-300">
            <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2 text-gray-800">Total Sales</div>
                <p class="text-gray-800 text-base">
                    R$ <%= @quick_stats[:sales] ? (@quick_stats[:sales]).to_s : "0" %>
                </p>
            </div>
        </div>
        <div class="max-w-sm rounded overflow-hidden shadow-lg bg-gradient-to-r from-gray-400 to-gray-300">
            <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2 text-gray-800">Avg Sales</div>
                <p class="text-gray-800 text-base">
                    R$ <%= @quick_stats[:avg_sale] ? number_to_currency(@quick_stats[:avg_sale], unit: '', separator: ',', delimiter: '.') : "0" %>
                </p>
            </div>
        </div>
        <div class="max-w-sm rounded overflow-hidden shadow-lg bg-gradient-to-r from-gray-400 to-gray-300">
            <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2 text-gray-800">Items / Sales</div>
                <p class="text-gray-800 text-base">
                    <%= @quick_stats[:per_sale].to_i%>
                </p>
            </div>
        </div>
    </div>
    <div class="my-8 w-full">
        <h2 class="text-2xl text-gray-800 font-medium mb-4">Revenue</h2>
        <div class="w-full" data-controller="dashboard" data-dashboard-revenue-value="<%= @revenue_by_day.to_json%>">
            <canvas id="revenueChart"></canvas>
        </div>
    </div>

    <div class="flex flex-col w-full">
        <h2 class="text-2xl text-gray-800 mb-4 font-medium">Recent unfulfilled orders</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-gray-100" style="border-collapse: separate; border-spacing: 0;">
                <thead>
                    <tr class="text-gray-800">
                        <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100">OrderID</th>
                        <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100">Customer E-mail</th>
                        <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100">Date</th>
                        <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100">Amount</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                    <% @orders.each do |order| %>
                        <tr>
                            <td class="px-6 py-4 border-b border-gray-200">
                                <%= link_to order.id, admin_order_path(order), class: "underline" %>
                            </td>
                            <td class="px-6 py-4 border-b border-gray-200">
                                <%= order.customer_email %>
                            </td>
                            <td class="px-6 py-4 border-b border-gray-200">
                                <%= order.created_at.strftime("%B %d, %Y %H:%M") %>
                            </td>
                            <td class="px-6 py-4 border-b border-gray-200">
                                <%= order.total.to_s %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
    
</div>